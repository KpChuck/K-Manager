<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kpchuck.k_klock.fragments.StatusBar_Add_On_Fragment"
    android:id="@+id/statusBarAddOnFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content">

        <!-- Primary title -->
        <TextView
            android:id="@+id/statusbarAddOnHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/statusbar_addon"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <!-- Option in substratum title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?textColor"
            android:background="@drawable/bottom_border"
            android:text="Appear as Options in Substratum"
            />

        <!-- Show ampm -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/ampm_stock_clock"
            android:id="@+id/ampm"/>

        <!-- Statusbar clock size -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/hide_network_indicators"
            android:id="@+id/networkSignalIndicatorSwitch"/>

        <!-- Hide network indicators -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/clock_size"
            android:id="@+id/clockSize"/>

        <!-- Lockscreen statusbar height -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/lockscreen_statusbar_size"
            android:id="@+id/hideStatusbar"/>

        <!-- Theme icons -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:text="@string/theme_statusbar_color"
            android:id="@+id/colorIcons"/>

        <!-- Theme statusbar icons -->
        <android.support.v7.widget.CardView
            android:id="@+id/iconColorCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?secondaryBackgroundColor"
            app:cardCornerRadius="2dp"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/iconHeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="@string/si_manager"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentStart="true"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:id="@+id/iconDesc"
                    android:text="@string/si_desc"
                    android:layout_below="@id/iconHeaderText"


                    />

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/includedIconsButton"
                    android:layout_height="wrap_content"
                    android:text="@string/included_colors"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iconDesc"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/addIconButton"
                    android:layout_height="wrap_content"
                    android:text="@string/add_color"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/includedIconsButton"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Options applied in K-Manager -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?textColor"
            android:background="@drawable/bottom_border"
            android:text="Applied in K-Manager"
            />

        <!-- Move Network Left Switch -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/network_icons_left"
            android:id="@+id/moveNetworkLeft"/>

        <!-- Notification Right -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/notification_icons_right"
            android:id="@+id/notifsRight"/>

        <!-- Blackout lockscreen -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/blackout_lockscreen"
            android:id="@+id/blackoutLockscreen"/>

        <!-- Hide Icons Service -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Hide StatusBar Icons on Lockscreen"
            android:id="@+id/hideStatusbarIcons"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="?secondaryBackgroundColor"
            android:text="Leave Battery, Wifi and Network Icons"
            android:id="@+id/hideStatusbarIconsNotFully"/>

        <!-- Custom text -->
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/custom_text_lockscreen"
            android:id="@+id/carrierText"/>

        <!-- Edittext view -->
        <android.support.v7.widget.CardView
            android:id="@+id/carrierCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="?secondaryBackgroundColor"
            app:cardCornerRadius="2dp"
            android:visibility="gone"

            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/showEverywhereCarrier"
                    android:text="@string/custom_text_everywhere"
                    android:checked="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hideNotificationIcons"
                    android:text="@string/hide_notifications"
                    android:checked="true"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/editCarrierText"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_text_hint"
                    android:layout_marginBottom="12dp"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


</android.support.v7.widget.CardView>
