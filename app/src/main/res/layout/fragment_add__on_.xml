<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kpchuck.k_klock.Fragments.StatusBar_Add_On_Fragment"
    android:id="@+id/statusBarAddOnFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/statusbarAddOnHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="StatusBar Add-Ons"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/statusbarAddOnHeader"
            android:text="Move Network Icons to the Left"
            android:id="@+id/moveNetworkLeft"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/moveNetworkLeft"
            android:text="Show Am/Pm in Stock Clock"
            android:id="@+id/ampm"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/ampm"
            android:text="Hide Network Signal Indicators"
            android:id="@+id/networkSignalIndicatorSwitch"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/networkSignalIndicatorSwitch"
            android:text="Lockscreen StatusBar Height"
            android:id="@+id/hideStatusbar"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/hideStatusbar"
            android:text="Replace Carrier Text with Custom Text"
            android:id="@+id/carrierText"/>

        <!-- Edittext view -->
        <android.support.v7.widget.CardView
            android:id="@+id/carrierCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#ffeeeeee"
            app:cardCornerRadius="2dp"
            android:visibility="gone"
            android:layout_below="@id/carrierText"
            android:layout_marginBottom="8dp">

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/editCarrierText"
                android:layout_height="wrap_content"
                android:hint="Enter your text here"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                />


        </android.support.v7.widget.CardView>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/carrierCardView"
            android:text="Theme StatusBar and Stock Clock Color"
            android:id="@+id/colorIcons"/>

        <!-- Theme statusbar icons -->
        <android.support.v7.widget.CardView
            android:id="@+id/iconColorCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:cardBackgroundColor="#ffeeeeee"
            app:cardCornerRadius="2dp"
            android:visibility="gone"
            android:layout_below="@id/colorIcons"
            android:layout_marginBottom="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/iconHeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="StatusBar Icon Color Manager"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentStart="true"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:id="@+id/iconDesc"
                    android:text="The light statusbar icon colors are linked to the main clock color, so changing clock color will change those.\n\nYou can add dark statusbar icon colors here"
                    android:layout_below="@id/iconHeaderText"


                    />

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/includedIconsButton"
                    android:layout_height="wrap_content"
                    android:text="Included Colors"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iconDesc"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/addIconButton"
                    android:layout_height="wrap_content"
                    android:text="Add Colors"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/includedIconsButton"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</android.support.v7.widget.CardView>
