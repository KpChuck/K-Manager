<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="kpchuck.k_klock.Fragments.Misc_Add_On_Fragment"
    android:id="@+id/miscAddOnFragmentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/miscAddOnHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_below="@id/hideStatusbar"
            android:text="Misc. Add-Ons"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <Switch
            android:id="@+id/noQsTilesTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/miscAddOnHeader"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:text="Number of Qs Tiles"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/noQsTilesTv"
            android:text="Hide Qs Tile Title"
            android:id="@+id/qsTitle"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/qsTitle"
            android:text="Rounded Recents"
            android:id="@+id/roundedRecents"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/roundedRecents"
            android:text="Add Custom Qs Background"
            android:id="@+id/qsBg"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/qsBg"
            android:text="Make compatible with 3 Minit"
            android:layout_marginBottom="12dp"
            android:id="@+id/minitMod"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>