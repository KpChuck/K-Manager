<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="New Options">

        <kpchuck.kklock.preferences.SummaryListPreference
            android:title="Choose a Format"
            android:dialogTitle="Formats"
            android:entries="@array/included_formats_title"
            android:entryValues="@array/included_formats_values"
            android:dependency="@string/key_use_included_format"/>

        <kpchuck.kklock.preferences.FormatPickerPreference
            android:title="Or add a custom format"
            android:key="@string/key_clock_format"
            app:enabledKey="@string/key_use_included_format"
            />

        <!-- Entries and entriesValues added dynamically -->
        <kpchuck.kklock.preferences.SummaryListPreference
            android:key="@string/key_clock_font"
            android:title="Choose a Font"
            />

        <com.jaredrummler.android.colorpicker.ColorPreference
            android:key="@string/key_clock_color"
            android:title="Choose a color"
            android:defaultValue="@android:color/white"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="General Clock"
        >

        <kpchuck.kklock.preferences.ApiSwitchPreference
            android:defaultValue="false"
            android:key="@string/key_oos_is_bad"
            android:title="I am using OxygenOS"
            android:summary="OxygenOS is special and needs workarounds for it to work properly."
            app:minApi="27"
        />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_statusbar_clock_size"
            android:title="@string/clock_size" />

        <kpchuck.kklock.preferences.DialogSwitchPreference
            android:defaultValue="false"
            android:key="@string/key_clock_hideable"
            android:title="@string/clock_hide_launcher"
            app:title="@string/warning"
            app:message="@string/clock_hideable_warning"
            app:confirmButton="@string/enable"
            app:confirmButtonClickListener="kpchuck.kklock.utils.ListenerCollection.doNothing"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_am_everywhere"
            android:title="@string/ampm_stock_clock" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_no_clock_option"
            android:title="@string/no_clock_added" />

        <kpchuck.kklock.preferences.ApiSwitchPreference
            android:defaultValue="false"
            android:key="devMakeDynamicClock"
            android:title="@string/make_dynamic"
            android:summary="Lets the clock switch between dark and light colors depending on the background."
            app:maxApi="26"/>

    </PreferenceCategory>


    <PreferenceCategory android:title="Custom Clock Formats">

        <kpchuck.kklock.preferences.FormatPickerPreference
            android:title="Add a format"
            app:keyNames="formatsTitles"
            app:keyValues="formatsValues"
            />

        <kpchuck.kklock.preferences.ListDialogPreference
            app:textArray="@array/included_formats_title"
            app:colorArray="@array/included_formats_title"
            app:showColors="false"
            android:title="See Included Clock Formats"
            android:dialogTitle="Included Formats"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Custom Clock Colors">

        <kpchuck.kklock.preferences.ColorPickerPreference
            android:title="Add a color"
            app:keyNames="colorsTitles"
            app:keyValues="colorsValues"
            app:nameHint="Add a Color"/>

        <kpchuck.kklock.preferences.ListDialogPreference
            app:showColors="true"
            app:textArray="@array/included_colors_title"
            app:colorArray="@array/included_colors_value"
            android:title="See Included Stock Colors"
            android:dialogTitle="Clock Colors"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Stock-Like Clock and Icon Colors">

        <kpchuck.kklock.preferences.ColorPickerPreference
            app:keyValues="iconsValues"
            app:keyNames="iconsTitles"
            app:nameHint="Add a Color"/>

        <kpchuck.kklock.preferences.ListDialogPreference
            app:textArray="@array/included_icons_title"
            app:colorArray="@array/included_icons_value"
            app:showColors="true"
            android:title="See Included Icon Colors"
            android:dialogTitle="Icon Colors"/>

    </PreferenceCategory>


</PreferenceScreen>