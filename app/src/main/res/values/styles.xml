<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="secondaryBackgroundColor">#ffeeeeee</item>
        <item name="textColor">#ff000000</item>
        <item name="textColorInverse">#ffffffff</item>
        <item name="transparentBackgroundColor">#bf808080</item>
        <item name="android:windowBackground">@android:drawable/screen_background_light</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Dark" parent="MaterialDrawerTheme.ActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="secondaryBackgroundColor">#ff333333</item>
        <item name="textColor">#ffffffff</item>
        <item name="textColorInverse">#ff000000</item>
        <item name="transparentBackgroundColor">#bf333333</item>
        <item name="android:windowBackground">@android:drawable/screen_background_dark</item>



    </style>

     <!-- Welcome Screen -->
    <style name="CustomWelcome" parent="WelcomeScreenTheme">
        <item name="welcomeButtonSkipText">@string/skip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">?secondaryBackgroundColor</item>
        <item name="android:textColor">?textColor</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:color">?textColor</item>
        <item name="android:textSize">18dip</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EditTitleText">
        <item name="android:color">?textColor</item>
        <item name="android:textSize">18dip</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

</resources>
